<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="color/transparent"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:menu="@menu/menu_home"
            app:navigationIcon="@drawable/ic_taza_nav"
            app:title="">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <include
                    layout="@layout/view_address_search"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="center" />
            </FrameLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/DescriptionBeginning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_protection_nav" />

                    <TextView
                        android:id="@+id/tvVerified"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="2dp"
                        android:text="@string/verified_kz_underlined"
                        android:textColor="#27B07D"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="true"
                android:clipToPadding="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/heroImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_main_page_nav"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title_ad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/wide_bold"
                    android:maxLines="3"
                    android:text="Чистота за 60 секунд"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@id/heroImage"
                    app:layout_constraintEnd_toStartOf="@id/heroImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/heroImage" />

                <TextView
                    android:id="@+id/title_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="4"
                    android:text="Проверенные специалисты
у вас дома через несколько кликов"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/title_ad"
                    app:layout_constraintStart_toStartOf="@+id/title_ad"
                    app:layout_constraintTop_toBottomOf="@+id/title_ad" />

                <!-- Бейдж: Быстро / За 60 секунд (верх, на heroImage) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/badgeFast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:minHeight="40dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:layout_constraintEnd_toEndOf="@+id/heroImage"
                    app:layout_constraintTop_toTopOf="@id/heroImage"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_badge_circle_primary"
                            android:src="@drawable/ic_speed" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFastTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Быстро"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvFastSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="За 60 секунд"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Бейдж: Надёжно / 100% гарантия (низ, на heroImage) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/badgeSafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:minHeight="40dp"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/heroImage"
                    app:layout_constraintStart_toStartOf="@id/heroImage"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_badge_circle_primary"
                            android:src="@drawable/ic_shield" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSafeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Надёжно"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSafeSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100% гарантия"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ctaContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="@+id/title_description"
                    app:layout_constraintTop_toBottomOf="@id/title_description"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOrder"
                            style="@style/FlatButtonNoInsets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_gradient_order"
                            android:fontFamily="@font/montserrat_medium"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:text="Заказать уборку"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="16sp"
                            app:backgroundTint="@color/primary_teal"
                            app:icon="@drawable/ic_sparkling"
                            app:iconGravity="textStart"
                            app:iconPadding="10dp"
                            app:iconSize="20dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/btn_border_blue" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnHowItWorks"
                            style="@style/FlatButtonNoInsets"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:text="Как это работает"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/btn_border_blue"
                            android:textFontWeight="500"
                            android:textSize="16sp"
                            app:backgroundTint="@android:color/transparent"
                            app:icon="@drawable/ic_arrow_right"
                            app:iconGravity="textStart"
                            app:iconPadding="10dp"
                            app:iconSize="18dp"
                            app:strokeColor="@color/transparent" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>