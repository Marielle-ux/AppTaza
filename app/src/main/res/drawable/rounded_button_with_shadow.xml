<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom soft shadow (larger, lighter) -->
    <item android:top="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="65dp"/>
            <solid android:color="#26000000"/> <!-- ~15% black -->
        </shape>
    </item>

    <!-- Inner shadow (closer, darker) -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="65dp"/>
            <solid android:color="#33000000"/> <!-- 20% black -->
        </shape>
    </item>

    <!-- Your actual button -->
    <item android:drawable="@drawable/rounded_button_solid"/>
</layer-list>
